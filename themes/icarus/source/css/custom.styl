$custom-color ?= #f3f3f3
$custom-color-darken ?= desaturate(darken($custom-color,10%), 40%)
$custom-color-lighten ?= lighten($custom-color,10%)
$custom-color-linear-darken ?= desaturate(darken($custom-color,6%), 30%)
$custom-color-linear-lighten ?= lighten($custom-color,4%)

.Neumorphism
    background-color: $custom-color
    border-radius: 20px
    box-shadow:  8px 8px 16px desaturate($custom-color-darken, 40%), -8px -8px 16px $custom-color-lighten

.concave
    background: linear-gradient(145deg, $custom-color-linear-lighten, $custom-color-linear-darken)

.convex
    background: linear-gradient(145deg, $custom-color-linear-darken, $custom-color-linear-lighten)

.pressed
    box-shadow:  inset 8px 8px 16px desaturate($custom-color-darken, 40%), inset -8px -8px 16px $custom-color-lighten


html, .navbar, .footer
    background-color: $custom-color

